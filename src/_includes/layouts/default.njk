{% set metaTitle %}
    {% if not title %}{{ site.title | safe }}
    {% else %}{{ title | capitalize | safe }} - {{ site.title | safe }}
    {% endif %}
{% endset %}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Add favicons here later
    <link href="/assets/favicon/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180">
    <link href="/assets/favicon/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png">
    <link href="/assets/favicon/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png">
    <link href="/assets/favicon/site.webmanifest" rel="manifest">
    -->

    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="{{ site.description | safe }}" name="description">
    <meta content="{{ site.author | safe }}" name="author">
    <meta content="index, follow" name="robots">

    <meta property="og:title" content="{{ metaTitle | trim }}">
    <meta property="og:description" content="{{ site.description | safe }}">
    <!-- Add open graph image later
    <meta property="og:image" content="">
    -->

    <title>{{ metaTitle | trim }}</title>
</head>
<body>

{{ content | safe }}

</body>
</html>
